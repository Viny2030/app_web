# Configuración de Backblaze B2
B2_KEY_ID=tu_key_id_aquí
B2_APPLICATION_KEY=tu_application_key_aquí
B2_BUCKET_INPUT=datos-entrada
B2_BUCKET_OUTPUT=datos-salida
B2_ENDPOINT=https://s3.us-west-002.backblazeb2.com  # Ajusta según tu región

# Configuración de correo electrónico (deshabilitado por defecto)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña
EMAIL_FROM=tu_correo@gmail.com

# Configuración de la aplicación
DEBUG=True

# Configuración de directorios locales
UPLOAD_DIR=./data/uploads
MODEL_DIR=./models
REPORTS_DIR=./reports
